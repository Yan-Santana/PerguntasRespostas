        <% perguntas.forEach(function(pergunta) { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>
    

</body>
